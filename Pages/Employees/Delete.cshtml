@page "{id:int?}"
@model MyApp.Namespace.DeleteEmployeeModel

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 bg-gray-50 rounded-lg shadow-inner">
    <h2 class="text-4xl font-extrabold text-gray-800 mb-6 border-b-4 border-red-600 pb-2 inline-block">Delete Employee</h2>

    <h3 class="text-xl font-semibold text-gray-700 mb-4">Are you sure you want to delete this employee?</h3>
    <p class="text-red-600 mb-6">This action cannot be undone.</p>

    <div class="bg-white p-6 rounded-lg shadow-md mb-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <dt class="text-gray-600 font-semibold">Employee ID:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Employee.EmployeeId)</dd>

            <dt class="text-gray-600 font-semibold">First Name:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Employee.FirstName)</dd>

            <dt class="text-gray-600 font-semibold">Last Name:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Employee.LastName)</dd>

            <dt class="text-gray-600 font-semibold">Job Title:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Employee.JobTitle)</dd>

            <dt class="text-gray-600 font-semibold">Department:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Employee.Department.DepartmentName)</dd> @* Display Department Name *@

            <dt class="text-gray-600 font-semibold">Company:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Employee.Company.CompanyName)</dd> @* Display Company Name *@

            <dt class="text-gray-600 font-semibold">Contact Info:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Employee.ContactInfo)</dd>
        </dl>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Employee.EmployeeId" />
        <div class="flex items-center justify-start gap-4">
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-colors duration-200">
                Delete
            </button>
            <a asp-page="./ListEmployees" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Cancel
            </a>
        </div>
    </form>
</div>
@page
@model MyApp.Namespace.EditMaterialUsageModel

@{
    ViewData["Title"] = "Edit Material Usage";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 bg-white rounded-lg shadow-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 border-b-2 border-blue-500 pb-2">Edit Material Usage</h2>

    <form method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 font-medium text-sm mb-4"></div>
        <input type="hidden" asp-for="MaterialUsage.MaterialUsageId" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="MaterialUsage.MaterialId" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="MaterialUsage.MaterialId" type="number" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                <span asp-validation-for="MaterialUsage.MaterialId" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div>
                <label asp-for="MaterialUsage.ProjectId" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="MaterialUsage.ProjectId" type="number" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                <span asp-validation-for="MaterialUsage.ProjectId" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div>
                <label asp-for="MaterialUsage.UsageDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="MaterialUsage.UsageDate" type="date" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                <span asp-validation-for="MaterialUsage.UsageDate" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div>
                <label asp-for="MaterialUsage.QuantityUsed" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="MaterialUsage.QuantityUsed" type="number" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                <span asp-validation-for="MaterialUsage.QuantityUsed" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <div class="flex justify-end gap-4 mt-8">
            <a asp-page="./ListMaterialUsage" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Cancel
            </a>
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP_BI_Operations</title>

    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Tailwind CSS CDN (for rapid prototyping, consider building locally for production) -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Apply Inter font globally */
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>

    <!-- Bootstrap 5 CSS (kept for general components like navbar, but removed table-specific styles) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTables CSS (Core) - No Bootstrap integration CSS for DataTables, rely on custom Tailwind styling -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">

    <!-- Your custom CSS (for site-wide styles, overrides, or specific component styling) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ERP_BI_Operations.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 text-gray-900">
    <header class="bg-white shadow-md">
        <nav class="container mx-auto px-4 py-3 flex items-center justify-between">
            <a class="navbar-brand text-xl font-bold text-blue-700" asp-area="" asp-page="/Index">ERP_BI_Operations</a>
            <button class="navbar-toggler lg:hidden focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-md p-2" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse lg:flex lg:items-center lg:w-auto w-full" id="navbarSupportedContent">
                <ul class="navbar-nav flex-grow-1 lg:flex lg:space-x-4 mt-4 lg:mt-0">
                    <li class="nav-item">
                        <a class="nav-link text-gray-700 hover:text-blue-600 font-medium px-3 py-2 rounded-md transition-colors duration-200" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-gray-700 hover:text-blue-600 font-medium px-3 py-2 rounded-md transition-colors duration-200" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                    @* Add more navigation links here for your ERP modules *@
                    <li class="nav-item">
                        <a class="nav-link text-gray-700 hover:text-blue-600 font-medium px-3 py-2 rounded-md transition-colors duration-200" asp-area="" asp-page="/Accounts/ListAccounts">Accounts</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container mx-auto px-4 py-6">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 bg-white text-gray-600 py-4 mt-8 shadow-inner">
        <div class="container mx-auto px-4 text-center">
            &copy; 2025 - ERP_BI_Operations - <a asp-area="" asp-page="/Privacy" class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    <!-- jQuery (must be loaded before DataTables) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- Bootstrap 5 JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS (Core) -->
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Your custom site.js -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
